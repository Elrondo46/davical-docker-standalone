version: "2.4"

services:
  db:
    image: postgres
    restart: always
    environment:
      - POSTGRES_PASSWORD=davical

  app:
    image: tuxnvape/davical-test
    volumes:
      - davical_config:/config
      - pgsql_data:/var/lib/postgresql/data
    restart: always
    ports:
      - 80:80
    links:
      - db
    environment:
      HOST_NAME: "example.org"
      PGSQL_ROOT_PASS: "davical"
      PASSDAVDB: "davical"
      DBHOST: "db"
      ADMINDAVICALPASS: "example"
      LANG: "fr_FR.UTF-8"
      LC_ALL: "fr_FR.UTF-8"
      DAVICAL_LANG: "fr_FR"
  volumes:
    davical_config:
    pgsql_data:
